<%- include('../modules/_header', {page: "Dashboard"}); %> <%-
include('../modules/_navs', {page: "Dashboard"}); %>

<div class="dashboard-intro text-center p-3">
  <h3 class="display-4">👨‍💻</h3>
  <h5 class="mb-3">Welcome, <b><%= user.name %>!</b></h5>
  <p>LabQuip Systems</p>
</div>

<% if(user.role == 'admin') { %>
<nav class="mt-3">
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a
      class="nav-item1 nav-link <% if (queryString.overview == 'expense'){ %>active<% } %>"
      data-toggle="tab"
      href="#expense"
      role="tab"
      >Expense Overview</a
    >
    <a
      class="nav-item2 nav-link <% if (queryString.overview == 'inventory'){ %>active<% } %>"
      data-toggle="tab"
      href="#inventory"
      role="tab"
      >Warranty Overview</a
    >
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div
    class="tab-pane fade <% if (queryString.overview == 'inventory'){ %>show active<% } %>"
    id="inventory"
    role="tabpanel"
  >
    <%- include('./_overview_inventory.ejs') %>
  </div>
  <div
    class="tab-pane fade <% if (queryString.overview == 'expense'){ %>show active<% } %>"
    id="expense"
    role="tabpanel"
  >
    <%- include('./_overview_expense') %>
  </div>
</div>
<% } %>


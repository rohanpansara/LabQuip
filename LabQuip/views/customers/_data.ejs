<div class="content-box">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead class="table__header">
        <tr>
          <th>Product Code</th>
          <th>Supplier Name</th>
          <th>Supplier Phone</th>
          <th>Supplier Address</th>
          <!-- <% if(user.role == 'admin') { %> -->
          <th>Total</th>
          <th>Quantity</th>
          <!-- <th>Paid</th> -->
          <!-- <th>Due</th> -->
          <!-- <th>Return</th> -->
          <th class="text-center">Actions</th>
          <!-- <% } %> -->
        </tr>
      </thead>
      <tbody class="table__body">
        <% if(locals.products) { products.forEach((product)=>{ %>
          <tr>
            <td><%= product.code %></td>
            <td><%= product.supplierName %></td>
            <td><%= product.supplierPhone %></td>
            <td><%= product.supplierAddress %></td>
            <td><%= product.Total %></td>
            <!-- <td class="Product-Rate">&#8377;<%= product.rate.toLocaleString(); %></td> -->
            <td class="Product-Quantity"><%= product.quantity %></td>
            <!-- <td><%= product.poNum %></td> -->
            <td
              class="table__actions text-center"
              data-item-id="<%= product.id %>"
            >
              <a
                href="#"
                class="table__actions-btn productEditButton"
                data-toggle="modal"
                data-target="#addProduct"
                ><i class="ic-pencil pr-2"></i>Edit</a
              >
              <a
                href="#"
                class="table__actions-btn"
                data-toggle="modal"
                data-target="#deleteModal"
                ><i class="ic-trash pr-2"></i>Delete</a
              >
            </td>
          </tr>
          <% })} %>
      </tbody>
    </table>
  </div>
</div>
